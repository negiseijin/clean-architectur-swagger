{
  "yaml.schemas": {
    "https://raw.githubusercontent.com/kogosoftwarellc/open-api/master/packages/openapi-schema-validator/resources/openapi-2.0.json": [
      "swagger/*.yaml",
      "swagger/*.yml"
    ]
  },
  "yaml.format.enable": true,
  "yaml.format.singleQuote": false,
  "yaml.hover": true,
  "yaml.schemaStore.enable": true,
  "yaml.completion": true,
  "yaml.validate": true,
  "yaml.format.bracketSpacing": true
}
